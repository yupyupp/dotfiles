! ---------------------------------------------------
! file: ~/.Xresources
! vim:fenc=utf-8:ai:si:et:ts=4:sw=4:ft=xdefaults:
! ---------------------------------------------------

! xterm
xterm*bellIsUrgent: true
xterm*termName: xterm-256color
xterm*font:                 xft:Anonymice Powerline:regular:size=10
xterm*imFont:               xft:Anonymice Powerline:regular:size=10
xterm*boldFont:             xft:Anonymice Powerline:bold:size=10
xterm*italicFont:           xft:Anonymice Powerline:italic:size=10
xterm*boldItalicFont:       xft:Anonymice Powerline:bold:italic:size=10


! Urxvt
URxvt*font:                 xft:Anonymice Powerline:bold:size=10
URxvt*imFont:               xft:Anonymice Powerline:regular:size=10
URxvt*boldFont:             xft:Anonymice Powerline:bold:size=10
URxvt*italicFont:           xft:Anonymice Powerline:italic:size=10
URxvt*boldItalicFont:       xft:Anonymice Powerline:bold:italic:size=10
URxvt.loginShell: true
URxvt.cursorUnderline: false
URxvt.cursorBlink: false
URxvt.urgentOnBell: true
URxvt.scrollBar: false
URxvt.scrollBar_right: false
URxvt.borderLess: false
URxvt.iso14755: true
URxvt.depth: 32
URxvt.perl-ext-common: default,clipboard,matcher
URxvt.url-launcher: /usr/bin/firefox
URxvt.matcher.button: 1
